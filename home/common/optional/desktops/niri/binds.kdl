gestures {
    hot-corners {
        off
    }
}
binds {
	// Show a list of important bindings.
	Super+Shift+Slash { show-hotkey-overlay; }

    // logout menu
    Super+Shift+E hotkey-overlay-title="Logout (wlogout)" { spawn "wlogout"; }

    // Overview mode
	Super+O repeat=false { toggle-overview; }

    //
    // ========== Monitor actions ==========
    //

	Super+Ctrl+h hotkey-overlay-title="Focus monitor left" { focus-monitor-left; }
	Super+Ctrl+j hotkey-overlay-title="Focus monitor down" { focus-monitor-down; }
	Super+Ctrl+k hotkey-overlay-title="Focus monitor up" { focus-monitor-up; }
	Super+Ctrl+l hotkey-overlay-title="Focus monitor right" { focus-monitor-right; }

    //
    // ========== Workspace actions ==========
    //

    // ========== Focus workspace ==========
	Super+1 { focus-workspace "1_dev"; }
	Super+2 { focus-workspace "2_uci"; }
	Super+3 { focus-workspace "3_edu"; }
	Super+4 { focus-workspace "4_gig"; }
	Super+5 { focus-workspace "5_gmz"; }
	Super+6 { focus-workspace 6; }
	Super+7 { focus-workspace 7; }
	Super+8 { focus-workspace "8_l"; }
	Super+9 { focus-workspace "9_u"; }
	Super+0 { focus-workspace "0_r"; }
	Super+Y { focus-workspace "Y_qrs"; }

    Super+Minus hotkey-overlay-title="Focus workspace previous" { focus-workspace-previous; }
    Super+Comma hotkey-overlay-title="Focus workspace up" { focus-workspace-up; }
    Super+Period hotkey-overlay-title="Focus workspace down" { focus-workspace-down; }

    // ==========  Move workspace ==========
    Super+Shift+Comma hotkey-overlay-title="Move workspace up" { move-workspace-up; }
    Super+Shift+Period hotkey-overlay-title="Move workspace down" { move-workspace-down; }

    //
    // ========== Window and column actions ==========
    //

	Super+Shift+Q { close-window; }

    // ========== Focus windows/columns ==========
	Super+Z { switch-focus-between-floating-and-tiling; }

	Super+H hotkey-overlay-title="Focus column or monitor left" { focus-column-or-monitor-left; }
	Super+J hotkey-overlay-title="Focus column or monitor down" { focus-window-or-monitor-down; }
	Super+K hotkey-overlay-title="Focus column or monitor up" { focus-window-or-monitor-up; }
	Super+L hotkey-overlay-title="Focus column or monitor right" { focus-column-or-monitor-right; }
	Super+Home { focus-column-first; }
	Super+End { focus-column-last; }

	Super+C hotkey-overlay-title="Center column on screen" { center-column; } // Center current column on screen
	Super+Ctrl+C hotkey-overlay-title="Center visible columns on screen" { center-visible-columns; } // Center all fully visible columns on screen

    // ========== Move windows/columns ==========
	Super+Shift+1 { move-window-to-workspace "1_dev"; }
	Super+Shift+2 { move-window-to-workspace "2_uci"; }
	Super+Shift+3 { move-window-to-workspace "3_edu"; }
	Super+Shift+4 { move-window-to-workspace "4_gig"; }
	Super+Shift+5 { move-window-to-workspace "5_gmz"; }
	Super+Shift+8 { move-window-to-workspace "8_l"; }
	Super+Shift+6 { move-window-to-workspace 6; }
	Super+Shift+7 { move-window-to-workspace 7; }
	Super+Shift+9 { move-window-to-workspace "9_u"; }
	Super+Shift+0 { move-window-to-workspace "0_r"; }
	Super+Shift+Y { move-window-to-workspace "Y_qrs"; }

	Super+Shift+H hotkey-overlay-title="Move column left" { move-column-left; }
	Super+Shift+J hotkey-overlay-title="Move window down" { move-window-down; }
	Super+Shift+k hotkey-overlay-title="Move window up" { move-window-up; }
	Super+Shift+L hotkey-overlay-title="Move column right" { move-column-right; }

	Super+Semicolon { consume-or-expel-window-left; }
	Super+Apostrophe { consume-or-expel-window-right; }

	Super+Shift+Home hotkey-overlay-title="Move column to first" { move-column-to-first; }
	Super+Shift+End hotkey-overlay-title="Move column to last" { move-column-to-last; }

	Super+Ctrl+Shift+H hotkey-overlay-title="Move window to monitor left"  { move-window-to-monitor-left; }
	Super+Ctrl+Shift+J hotkey-overlay-title="Move window to monitor down"  { move-window-to-monitor-down; }
	Super+Ctrl+Shift+K hotkey-overlay-title="Move window to monitor up"    { move-window-to-monitor-up; }
	Super+Ctrl+Shift+L hotkey-overlay-title="Move window to monitor right" { move-window-to-monitor-right; }

    // ========== Window Tabs ==========
    // Use `consume-or-expel-...` binds above to add/remove windows to a tabbed column
	Super+G hotkey-overlay-title="Toggle column tabs" { toggle-column-tabbed-display; } // Toggle the focused column between normal and tabbed display

    //
    // ========== Window and column size ==========
    //

	Super+R hotkey-overlay-title="Switch preset column widths" { switch-preset-column-width; } // Presets are defined in rules.kdl
    Super+Shift+R hotkey-overlay-title="Switch preset window heights" { switch-preset-window-height; } // Presets are defined in rules.kdl

	Super+F hotkey-overlay-title="Toggle fullscreen" { fullscreen-window; }
	Super+Alt+F hotkey-overlay-title="Toggle windowed fullscreen" { toggle-windowed-fullscreen; } //tricks the window content into thinking its fullscreen
	Super+Shift+F hotkey-overlay-title="Toggle floating" { toggle-window-floating; }

	Super+Ctrl+F hotkey-overlay-title="Maximize column width" { maximize-column; } // Toggle maximized state of the focused column
	Super+Shift+Ctrl+F hotkey-overlay-title="Expand column to available width" { expand-column-to-available-width; } // Expand the focused column to space not taken up by other fully visible columns

	Super+Equal { set-column-width "-1"; }
	Super+Plus  { set-column-width "+1"; }
	Super+Shift+Equal { set-window-height "-1"; }
	Super+Shift+Plus  { set-window-height "+1"; }

    //
    // ========== System controls ==========
    //

    // ========== Brightness ==========
	XF86MonBrightnessUp   allow-when-locked=true hotkey-overlay-title=null { spawn "brightnessctl" "set" "0.01+"; }
	XF86MonBrightnessDown allow-when-locked=true hotkey-overlay-title=null { spawn "brightnessctl" "set" "0.01-"; }

    // ========== Media Control==========
	XF86AudioPlay    allow-when-locked=true hotkey-overlay-title=null { spawn "playerctl" "play-pause" "--ignore-player=firefox,chromium,brave"; }
	XF86AudioStop    allow-when-locked=true hotkey-overlay-title=null { spawn "playerctl" "stop" "--ignore-player=firefox,chromium,brave"; }
	XF86AudioPrev    allow-when-locked=true hotkey-overlay-title=null { spawn "playerctl" "previous" "--ignore-player=firefox,chromium,brave"; }
	XF86AudioNext    allow-when-locked=true hotkey-overlay-title=null { spawn "playerctl" "next" "--ignore-player=firefox,chromium,brave"; }
	XF86AudioRewind  allow-when-locked=true hotkey-overlay-title=null { spawn "playerctl" "position" "2-" "--ignore-player=firefox,chromium,brave"; }
	XF86AudioForward allow-when-locked=true hotkey-overlay-title=null { spawn "playerctl" "position" "2+" "--ignore-player=firefox,chromium,brave"; }

    // ========== Media audio control==========
	Shift+XF86AudioRaiseVolume allow-when-locked=true hotkey-overlay-title=null { spawn "playerctl" "volume" "0.05%+"; }
	Shift+XF86AudioLowerVolume allow-when-locked=true hotkey-overlay-title=null { spawn "playerctl" "volume" "0.05%-"; }

    // ========== Output audio control==========
	XF86AudioRaiseVolume allow-when-locked=true  hotkey-overlay-title=null { spawn "wpctl" "set-volume" "@DEFAULT_AUDIO_SINK@" "0.05+"; }
	XF86AudioLowerVolume allow-when-locked=true  hotkey-overlay-title=null { spawn "wpctl" "set-volume" "@DEFAULT_AUDIO_SINK@" "0.05-"; }
	XF86AudioMute        allow-when-locked=true  hotkey-overlay-title=null { spawn "wpctl" "set-mute"   "@DEFAULT_AUDIO_SINK@" "toggle"; }

    // ========== Input audio control==========
	Super+XF86AudioRaiseVolume allow-when-locked=true  hotkey-overlay-title=null { spawn "wpctl" "set-volume" "@DEFAULT_AUDIO_SOURCE@" "0.05+"; }
	Super+XF86AudioLowerVolume allow-when-locked=true  hotkey-overlay-title=null { spawn "wpctl" "set-volume" "@DEFAULT_AUDIO_SOURCE@" "0.05-"; }
	Super+XF86AudioMute        allow-when-locked=true  hotkey-overlay-title=null { spawn "wpctl" "set-mute"   "@DEFAULT_AUDIO_SOURCE@" "toggle"; }
	XF86AudioMicMute           allow-when-locked=true  hotkey-overlay-title=null { spawn "wpctl" "set-mute"   "@DEFAULT_AUDIO_SOURCE@" "toggle"; }

    // ========== Power menu ==========
    // FIXME(niri): probably disable interrupting power?
	// XF86PowerOff allow-when-locked=true  hotkey-overlay-title=null { spawn "wlogout"; }
	// XF86Sleep    allow-when-locked=true  hotkey-overlay-title=null { spawn "wlogout"; }
	// XF86Suspend  allow-when-locked=true  hotkey-overlay-title=null { spawn "wlogout"; }

    //
    // ========== Screenshots ==========
    //

    // NOTE: see config.kdl for screenshot-path
    Print { screenshot; }
    Super+Shift+P  hotkey-overlay-title="Screenshot" { screenshot; }
    // Super+Ctrl+Shift+P { screenshot write-to-disk=true; }
    // Super+Alt+P { screenshot show-pointer=false; }
    // Super+Ctrl+Alt+P { screenshot show-pointer=true; }

    //
    // ========== Quick Launch ==========
    //
	// Spawn terminal
    //FIXME(niri): hardcoding
	Super+Return hotkey-overlay-title="Spawn terminal" { spawn "ghostty"; }
	// Show drun launcher
	Super+Space hotkey-overlay-title="Show drun launcher" { spawn "rofi" "-show" "drun"; }
	// Show run/program launcher
	Super+Shift+Space hotkey-overlay-title="Show run launcher" { spawn "rofi" "-show" "run"; }
	// Show ssh launcher
	Super+Shift+S hotkey-overlay-title="Show ssh launcher" { spawn "rofi" "-show" "ssh"; }
	// Show window selector
	Super+Tab hotkey-overlay-title="Show window selector" { spawn "rofi" "-show" "window"; }
    // Spawn file explorer
	Super+Ctrl+O hotkey-overlay-title="Spawn file explorer" { spawn "thunar"; }

    //
    // ========== Clipboard ==========
    //
    // FIXME(niri): setup with copyq
	// Select from the clipboard.
	//Super+Shift+V { spawn "dash" "-c" "clipman pick -t CUSTOM -T 'fuzzel -d --no-icons --width 60'"; }
	// Clear the clipboard.
	//Super+Ctrl+V { spawn "dash" "-c" "clipman clear --all && dunstify 'Clipboard cleared.'"; }
	// Opan a permanent "clipboard" file.
	//Alt+Shift+V { spawn "dash" "-c" "$TERMINAL -e micro $HOME/Documents/Clipboard.txt"; }

	// Applications such as remote-desktop clients and software KVM switches may
	// request that niri stops processing the keyboard shortcuts defined here
	// so they may, for example, forward the key presses as-is to a remote machine.
	// It's a good idea to bind an escape hatch to toggle the inhibitor,
	// so a buggy application can't hold your session hostage.
	//
	// The allow-inhibiting=false property can be applied to other binds as well,
	// which ensures niri always processes them, even when an inhibitor is active.
	// Super+Escape allow-inhibiting=false { toggle-keyboard-shortcuts-inhibit; }
}
